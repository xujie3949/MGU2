.container {
  width: 20%;
  height: 100%;
  padding: 0;
  margin: 0;
  left: 0;
  top: 0;
  position: absolute;
}

.content {
  width: 100%;
  height: 100%;
  background: red;
  border-right: 1px solid rgba(0, 0, 0, 0.45);
  overflow: hidden;
}

.emptyContent {
  flex: 1;
  background: red;
}

.handle {
  cursor: pointer;
  position: absolute;
  top: calc(50% - 7px);
  left: 100%;
}