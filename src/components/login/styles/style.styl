  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginForm {
  width: 463px;
  padding-top: 30px;
  padding-bottom: 50px;
  border: 1px gray solid;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginContent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleText {
  font: 21px "Microsoft YaHei";
  color: #333333;
  line-height: 21px;
}

.titleLine {
  margin-top: 10px;
  width: 100%;
  height: 1px;
  background: #2E71F2;
}

.inputContainer {
  width: 100%;
  margin-top: 40px;
  position: relative;
}

.iconContainer {
  position: absolute;
  top: 0;
  height: 100%;
  padding-left: 20px;
  z-index: 5;
  display: flex;
  align-items: center;
}

.icon {
  width: 22px;
  height: 22px;
}

.rememberMe {
  margin-top: 20px;
  align-self: flex-end;
}

.loginButton {
  margin-top: 20px;
  width: 100%;
}