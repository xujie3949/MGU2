.container {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bg {
  visibility: hidden;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.loginForm {
  border: 1px gray solid;
  border-radius: 5px;
}

.title {
}

.titleText {
  font: 21px "Microsoft YaHei";
  color: #333333;
  line-height: 21px;
}

.titleLine {
  margin-top: 10px;
  height: 1px;
  background: #2E71F2;
}

.inputContainer {
  width: 100%;
  margin-top: 40px;
  position: relative;
}

.icon {
  width: 22px;
  height: 22px;
}

.rememberMe {
  margin-top: 21px;
  align-self: flex-end;
  font: 17px "Microsoft YaHei";
  color: #333333;
  line-height: 17px;
}

.rememberMe > input {
  vertical-align: text-top;
  width: 17px;
  height: 17px;
  margin-right: 6px;
}

.errmsg {
  margin-top: 10px;
  font: 17px "Microsoft YaHei";
  color: red;
  line-height: 17px;
}

.loginButton {
  margin-top: 10px;
  width: 100%;
  height: 50px;
}